---
import { Image } from "astro:assets";
import "../styles/scss/components/cards.scss";
// || Icons
export interface Props {
  title: string;
  description: string;
  icon: ImageMetadata;
  alt?: string;
}
const { title, description, icon, alt } = Astro.props;
---

<div class="card">
  <div class="content--top">
    <div class="icon">
      <Image
        src={icon}
        width={icon.width}
        height={icon.height}
        alt={alt ? alt : ""}
      />
    </div>
    <h3 class="title">{title}</h3>
  </div>
  <div class="content--bottom">
    <p>
      {description}
    </p>
  </div>
</div>
